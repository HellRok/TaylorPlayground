#!/usr/bin/env bash
set -euo pipefail

clean() {
  rm -rf exports/*
}

setup-folders() {
  mkdir -p dist/playground
}

build-assets() {
  ./bin/build
  npm run build
}

build() {
  build-assets
  #bin/build-playground
}

serve() {
  pushd dist
  ruby -run -e httpd . --port ${PORT:-3001}
  popd
}

clean
setup-folders
build
serve
